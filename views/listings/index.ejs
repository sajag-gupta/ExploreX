<% layout("/layouts/boilerplate") %>
    <div id="filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-regular fa-building"></i>
            <p>Iconic Cities</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-mountain-sun"></i>
            <p>Mountains</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-tractor"></i>
            <p>Farms</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-water"></i>
            <p>Lake</p>
        </div>
        <!-- ///// -->
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beaches</p>
        </div>
        
        <div class="tax-toggle">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>

    </div>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
        <% if (allListings.length> 0) { %>
            <% allListings.forEach((listing)=> { %>
                <div class="col">
                    <a href="/listings/<%=listing._id%>" style="text-decoration: none;">
                        <div class="card listing-card animation-card">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>"
                                style="height: 20rem;">
                            <div class="card-body">
                                <h5 class="card-title"> <b>
                                        <%= listing.title %>
                                    </b></h5>
                                <p class="card-text" data-original-price="<%= listing.price %>">Price: &#x20b9 <%=
                                        listing.price.toLocaleString('en-IN') %>
                                        <i class="tax-info"> &nbsp;+18% GST</i>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% }); %>
                    <% } %>
    </div>

    <!-- Pagination Component -->
    <%- include('../includes/pagination') %>